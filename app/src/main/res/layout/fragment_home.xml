<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <include layout="@layout/home_toolbar" />
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="@dimen/_55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_163dp"
            android:background="@color/green"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@drawable/home_balance_section"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8dp"
                        android:layout_marginEnd="@dimen/_70dp"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/_12dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingEnd="@dimen/_2dp"
                        android:src="@drawable/home_easypaisa_text" />

                    <TextView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_25dp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_2dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_25dp"
                        android:paddingEnd="@dimen/_2dp"
                        android:text="@string/my_rewards"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_home_my_rewards" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_19dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/available_balance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:drawablePadding="@dimen/_5dp"
                            android:text="@string/rs"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_home_balance_arrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:layout_marginBottom="@dimen/_7dp"
                            android:gravity="center"
                            android:text="@string/updated_just_now"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp"
                            app:drawableStartCompat="@drawable/ic_home_refresh" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="@dimen/_115dp"
                            android:layout_height="@dimen/_25dp"
                            android:background="@drawable/home_upgrade_account_button"
                            android:text="@string/upgrade_account"
                            android:textSize="@dimen/_11sp" />

                        <Button
                            android:layout_width="@dimen/_115dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_marginTop="@dimen/_6dp"
                            android:background="@drawable/home_add_cash_button"
                            android:text="@string/add_cash"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sp" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_89dp"
                android:layout_height="@dimen/_89dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_marginBottom="@dimen/_5dp"
                card_view:cardCornerRadius="@dimen/_12dp"
                card_view:cardElevation="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_8dp"
                        android:src="@drawable/ic_home_send_money" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:text="@string/send_money"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_89dp"
                android:layout_height="@dimen/_89dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_25dp"
                android:layout_marginBottom="@dimen/_5dp"
                card_view:cardCornerRadius="@dimen/_12dp"
                card_view:cardElevation="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_8dp"
                        android:src="@drawable/ic_home_bill_payment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:text="@string/bill_payment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_89dp"
                android:layout_height="@dimen/_89dp"
                android:layout_margin="@dimen/_5dp"
                card_view:cardCornerRadius="@dimen/_12dp"
                card_view:cardElevation="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_8dp"
                        android:src="@drawable/ic_home_mobile_packages" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:text="@string/mobile_packages"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_8dp"
            android:text="@string/more_with_easypaisa"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/home_balance_section"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/homeFirstViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homeFirstViewPagerIndicator1"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_2dp"
                    android:src="@drawable/ic_home_more_with_easypaisa_scroll_dot" />

                <ImageView
                    android:id="@+id/homeFirstViewPagerIndicator2"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:src="@drawable/ic_home_more_with_easypaisa_scroll_dot" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18dp"
            android:layout_marginTop="@dimen/_1dp"
            android:layout_marginBottom="@dimen/_15dp"
            android:text="@string/get_your_easypaisa_debit_card"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginBottom="@dimen/_15dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_weight="1"
                android:background="@drawable/home_gyedc_card_1_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:text="@string/online_card"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_18dp"
                    android:layout_marginBottom="@dimen/_38dp"
                    android:text="@string/only_for_online_payments_in_pakistan"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_11sp" />

                <Button
                    android:layout_width="@dimen/_135dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:background="@drawable/home_upgrade_account_button"
                    android:drawableEnd="@drawable/ic_home_online_card"
                    android:gravity="center"
                    android:text="@string/manage_cards"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_gyedc_card_2_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:drawablePadding="@dimen/_30dp"
                    android:gravity="center"
                    android:text="@string/plastic_card"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sp"
                    app:drawableEndCompat="@drawable/ic_home_gyedc_plastic_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_18dp"
                    android:layout_marginBottom="@dimen/_38dp"
                    android:text="@string/only_for_online_payments_in_pakistan"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_11sp" />

                <Button
                    android:layout_width="@dimen/_135dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:background="@drawable/home_upgrade_account_button"
                    android:drawableEnd="@drawable/ic_home_online_card"
                    android:gravity="center"
                    android:text="@string/manage_cards"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:text="@string/promotion"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp"
            android:layout_marginBottom="@dimen/_15dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="@dimen/_130dp"
                    android:layout_margin="@dimen/_5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p1" />

                <ImageView
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="@dimen/_130dp"
                    android:layout_margin="@dimen/_5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p2" />

                <ImageView
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="@dimen/_130dp"
                    android:layout_margin="@dimen/_5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p3" />

                <ImageView
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="@dimen/_130dp"
                    android:layout_margin="@dimen/_5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p4" />

                <ImageView
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="@dimen/_130dp"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p5" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:text="@string/discover_mini_apps_on_easypaisa"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginBottom="@dimen/_15dp"
            android:background="@drawable/home_balance_section"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/homeSecondViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homeSecondViewPagerIndicator1"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_2dp"
                    android:src="@drawable/ic_home_more_with_easypaisa_scroll_dot" />

                <ImageView
                    android:id="@+id/homeSecondViewPagerIndicator2"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_2dp"
                    android:src="@drawable/ic_home_more_with_easypaisa_scroll_dot" />

                <ImageView
                    android:id="@+id/homeSecondViewPagerIndicator3"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_2dp"
                    android:src="@drawable/ic_home_more_with_easypaisa_scroll_dot" />

                <ImageView
                    android:id="@+id/homeSecondViewPagerIndicator4"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:src="@drawable/ic_home_more_with_easypaisa_scroll_dot" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_163dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:background="@drawable/home_balance_section"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_8dp"
                        android:layout_marginEnd="@dimen/_12dp"
                        android:paddingStart="@dimen/_12dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingEnd="@dimen/_2dp"
                        android:src="@drawable/ic_support" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help_and_customer_support"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_12dp"
                            android:text="@string/register_and_complaint"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp" />

                        <Button
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="@dimen/_22dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:layout_marginBottom="@dimen/_15dp"
                            android:background="@drawable/home_help_and_customer_support_button_bg"
                            android:drawableEnd="@drawable/ic_home_customer_support_button"
                            android:gravity="center"
                            android:text="@string/get_help"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"

        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <include layout="@layout/drawer_layout" />

        </ScrollView>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
