<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                app:cardCornerRadius="@dimen/_15dp"
                app:cardElevation="@dimen/_5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_mwe_discounts" />


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sp"
                android:gravity="center"
                android:text="@string/hotnspicy"/>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                app:cardCornerRadius="@dimen/_15dp"
                app:cardElevation="@dimen/_5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_mwe_easy_cash_loan" />


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sp"
                android:gravity="center"
                android:text="@string/game_box"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                app:cardCornerRadius="@dimen/_15dp"
                app:cardElevation="@dimen/_5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_mwe_see_all" />


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sp"
                android:gravity="center"
                android:text="@string/more"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



        </LinearLayout>

    </LinearLayout>


</LinearLayout>